<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    >


    <ImageView
        android:id="@+id/Tavatar"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:src="@drawable/teacherpic1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102" />

    <TextView
        android:id="@+id/Tname"
        android:layout_width="120dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:text="שם :  "
        android:textColor="#F8F8F8"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/Tavatar"
        app:layout_constraintTop_toTopOf="@+id/Tavatar" />

    <TextView
        android:id="@+id/Tclaas"
        android:layout_width="120dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:text="כיתה :  "
        android:textColor="#F8F8F8"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/Tname"
        app:layout_constraintTop_toTopOf="@+id/Tavatar" />

</androidx.constraintlayout.widget.ConstraintLayout>